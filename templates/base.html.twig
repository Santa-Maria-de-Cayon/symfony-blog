<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %} Symfony Blog {% endblock %}</title>
        {% block stylesheets %}
            <link rel="icon" href="https://getbootstrap.com/docs/4.0/assets/img/favicons/favicon.ico">
            <link href="https://getbootstrap.com/docs/4.0/dist/css/bootstrap.min.css" rel="stylesheet">
            <link href="https://fonts.googleapis.com/css?family=Playfair+Display:700,900" rel="stylesheet">
            <link href="https://getbootstrap.com/docs/4.0/examples/blog/blog.css" rel="stylesheet">
            <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
            <link href="{{ asset('css/style.css' ) }}" rel="stylesheet">
        {% endblock %}
    </head>
    <body>
        {% block body %}


            {% if app.user %}
                <div class="container">
                    <header class="blog-header py-3">
                        <div class="row flex-nowrap justify-content-between align-items-center">
                            <div class="col-4 pt-1">
                                <div class=""><i class="fa fa-user" aria-hidden="true"></i> {{ app.user.username }} </div>
                            </div>
                            <div class="col-4 text-center">
                                <a class="blog-header-logo text-dark" href="/">Symfony Blog</a>
                            </div>
                            <div class="col-4 d-flex justify-content-end align-items-center">
                                <a class="btn btn-sm btn-outline-secondary" href="{{ path('app_logout') }}"><i class="fa fa-sign-out"></i> Salir</a>
                            </div>
                        </div>
                    </header>
                    <div class="nav-scroller py-1 mb-2">
                        <nav class="nav d-flex justify-content-between">
                            <a class="p-2 text-muted" href="{{ path('crear_post') }}">Crear publicaci√≥n</a>
                            <a class="p-2 text-muted" href="{{ path('my_posts') }}">Mis publicaciones</a>
                        </nav>
                    </div>
                </div>
            {% else %}
                <div class="container">
                    <header class="blog-header py-3">
                        <div class="row flex-nowrap justify-content-between align-items-center">
                            <div class="col-4 pt-1">
                                <a class="btn btn-sm btn-outline-secondary" href="{{ path('registro') }}"><i class="fa fa-user" aria-hidden="true"></i> Registrase</a>
                            </div>
                            <div class="col-4 text-center">
                                <a class="blog-header-logo text-dark" href="/">Symfony Blog</a>
                            </div>
                            <div class="col-4 d-flex justify-content-end align-items-center">
                                <a class="btn btn-sm btn-outline-secondary" href="{{ path('app_login') }}"><i class="fa fa-sign-in" aria-hidden="true"></i> Entrar</a>
                            </div>
                        </div>
                    </header>
                </div>
            {% endif %}

        {% endblock %}

        <footer class="blog-footer footer">
            <p><a href="/">Symfony</a></p>
        </footer>

        {% block javascripts %}
            <script type='text/javascript' src='https://suzdalenko.com/wp-includes/js/jquery/jquery.js?ver=1.12.4-wp'></script>
            <script type='text/javascript' src='https://suzdalenko.com/wp-includes/js/jquery/jquery-migrate.min.js?ver=1.4.1'></script>
            <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
            <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
            <script src="{{ path('fos_js_routing_js', { callback: 'fos.Router.setData' }) }}"></script>
            <script src="{{ asset('js/ajax.js' ) }}"></script>
        {% endblock %}
    </body>
</html>


